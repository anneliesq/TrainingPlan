<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="#B959A2AB"
            android:text="Choose a distance and enter your goal time:"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/mileCheckBox"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:text="Mile" />

        <CheckBox
            android:id="@+id/fivekCheckBox"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="175dp"
            android:layout_marginTop="40dp"
            android:text="5K" />

        <CheckBox
            android:id="@+id/tenkCheckBox"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="330dp"
            android:layout_marginTop="40dp"
            android:text="10K" />

        <EditText
            android:id="@+id/hours"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="80dp"
            android:background="#FFFFFF"
            android:hint="Hours: "
            android:inputType="number"
            android:textColor="#000000"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="#7D7C7C"
            android:textSize="14sp" />
        />

        <EditText
            android:id="@+id/minutes"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="80dp"
            android:background="#FFFFFF"
            android:hint="Minutes: "
            android:inputType="number"
            android:textColor="#000000"
            android:textColorHint="#7D7C7C"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/seconds"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="80dp"
            android:background="#FFFFFF"
            android:hint="Seconds: "
            android:inputType="number"
            android:textColor="#000000"
            android:textColorHint="#7D7C7C"
            android:textSize="14sp" />

        <Button
            android:id="@+id/calculate"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginLeft="265dp"
            android:layout_marginTop="80dp"
            android:background="#438B95"
            android:text="Calculate Paces" />

        <TextView
            android:id="@+id/equivalent"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="110dp"
            android:background="#B959A2AB"
            android:text="Equivalent Paces:"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/milePace"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            android:hint="00:00" />

        <TextView
            android:id="@+id/threekPace"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="190dp"
            android:hint="00:00" />

        <TextView
            android:id="@+id/fivekPace"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="230dp"
            android:hint="00:00" />

        <TextView
            android:id="@+id/tenkPace"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="270dp"
            android:hint="00:00" />

        <TextView
            android:id="@+id/tempoPace"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="310dp"
            android:hint="00:00" />

        <TextView
            android:id="@+id/easyPace"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="350dp"
            android:hint="00:00" />

        <TextView
            android:id="@+id/longPace"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="390dp"
            android:hint="00:00" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="440dp"
            android:background="#B959A2AB"
            android:text="Training Plan Explanations:"
            android:textSize="18sp" />


        <TextView
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="470dp"
            android:background="#27B3B2B2"
            android:text="Monday / Wednesday / Friday:" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginLeft="103dp"
            android:layout_marginTop="470dp"
            android:text="Easy runs are recovery days. The pace listed above is recommended, but it is important to take these runs easy, so you can take the workout days hard. "

            />

        <TextView
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="543dp"
            android:background="#27B3B2B2"
            android:text="Tuesday/Thursday:" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginLeft="103dp"
            android:layout_marginTop="543dp"
            android:layout_weight="1"
            android:text="Workout days are meant to challenge yourself. It is important to follow the pacing guidelines. You should run 10 minutes and stretch before and after the workout. " />

        <TextView
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="616dp"
            android:background="#27B3B2B2"
            android:text="Saturday:" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginLeft="103dp"
            android:layout_marginTop="616dp"
            android:text="Long runs are a version of workout days. They build up your aerobic capacity. It is important to not run these too fast." />

        <TextView
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="689dp"
            android:background="#27B3B2B2"
            android:padding="6dip"
            android:text="Off Days/ Cross-  Training:" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginLeft="103dp"
            android:layout_marginTop="689dp"
            android:layout_marginRight="5dp"
            android:text="These days are meant to give your body a rest and prepare it for another hard week of training. Feel free to add in additionall recovery on these days (stretching, yoga...)" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="762dp"
            android:background="#27B3B2B2"
            android:text="Race Day:" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginLeft="103dp"
            android:layout_marginTop="762dp"
            android:layout_weight="1"
            android:text="On race day, make sure to warm up well and follow the pacing guidelines. You can do it! " />

        <TextView
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="835dp"
            android:background="#27B3B2B2"
            android:text="Racing Terminology:" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginLeft="103dp"
            android:layout_marginTop="835dp"
            android:text="Tempo runs are at a pace between easy run and race pace. They should be comfortably challenging. Strides are meant to build fast twitch muscles and should be run at mile pace. Hill Strides are meant to improve form and strength. They should be measured by effort, not pace." />

        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="950dp"
            android:layout_marginBottom="10dp"
            android:background="#438B95"
            android:text="BACK" />


    </RelativeLayout>

</ScrollView>

